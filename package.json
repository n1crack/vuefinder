{
  "name": "vuefinder",
  "version": "3.0.0-dev",
  "description": "Vuefinder is a file manager component for vuejs.",
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "prepare": "cypress install",
    "test:e2e": "start-server-and-test preview http://localhost:4173 'cypress run --e2e'",
    "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/"
  },
  "homepage": "https://github.com/n1crack/vuefinder#readme",
  "keywords": [
    "vue",
    "file manager",
    "file plugin",
    "file explorer",
    "finder"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/n1crack/vuefinder.git"
  },
  "author": {
    "name": "Yusuf Ã–zdemir",
    "mail": "yusuf@ozdemir.be"
  },
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "@tanstack/vue-query": "^5.90.2",
    "@types/overlayscrollbars": "^1.12.5",
    "@uppy/core": "^5.0.2",
    "@uppy/locales": "^5.0.1",
    "@uppy/xhr-upload": "^5.0.1",
    "@viselect/vanilla": "^3.9.0",
    "cropperjs": "^1.6.2",
    "overlayscrollbars": "^2.12.0",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.5.0",
    "tailwindcss": "^4.1.13",
    "vanilla-lazyload": "^19.1.3",
    "vite-svg-loader": "^5.1.0",
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.18.6",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "@vitest/eslint-plugin": "^1.3.13",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "cypress": "^15.3.0",
    "eslint": "^9.33.0",
    "eslint-plugin-cypress": "^5.1.1",
    "eslint-plugin-vue": "~10.4.0",
    "jiti": "^2.5.1",
    "jsdom": "^27.0.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.6.2",
    "rollup-plugin-copy": "^3.5.0",
    "start-server-and-test": "^2.1.2",
    "typescript": "~5.9.0",
    "vite": "^7.1.7",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.0"
  }
}
